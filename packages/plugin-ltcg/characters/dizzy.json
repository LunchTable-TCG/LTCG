    "@elizaos/plugin-sql",
    "@elizaos/plugin-openrouter",
    "@elizaos/plugin-bootstrap",
    "@elizaos/plugin-ltcg"
  ],
  "settings": {
    "LTCG_AGENT_ID": "${LTCG_AGENT_ID}",
    "LTCG_API_URL": "${LTCG_API_URL}",
    "LTCG_CONTROL_API_KEY": "${LTCG_CONTROL_API_KEY}",
