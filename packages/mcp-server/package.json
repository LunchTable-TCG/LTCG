{
  "name": "@lunchtable/mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for LunchTable-TCG. Enables AI agents to play the Lunch Table Trading Card Game through a standardized interface compatible with Claude Desktop, Cline, and other MCP clients.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ltcg-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lunchtable/lunchtable-tcg.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/lunchtable/lunchtable-tcg/tree/main/packages/mcp-server",
  "bugs": {
    "url": "https://github.com/lunchtable/lunchtable-tcg/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start:stdio": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "lunchtable",
    "tcg",
    "trading-card-game",
    "ai-agent",
    "ai",
    "claude",
    "bun",
    "hono"
  ],
  "author": "LunchTable-TCG Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "convex": "^1.31.6",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/bun": "^1.1.0",
    "typescript": "^5.8.0"
  }
}
