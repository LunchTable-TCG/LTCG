{
  "name": "@lunchtable/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for LunchTable-TCG - enables AI agents to play the Lunch Table Card Game",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ltcg-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start:stdio": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "prepare": "npm run build"
  },
  "keywords": ["mcp", "lunchtable-tcg", "trading-card-game", "ai-agent"],
  "author": "LunchTable-TCG Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "convex": "^1.31.6",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.8.0"
  }
}
