{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ltcg.game/schemas/card.json",
  "title": "LTCG Card Definition",
  "description": "Schema for card definitions in the Legendary Trading Card Game",

  "definitions": {
    "rarity": {
      "type": "string",
      "enum": ["common", "uncommon", "rare", "epic", "legendary"]
    },
    "cardType": {
      "type": "string",
      "enum": ["creature", "spell", "trap", "equipment"]
    },
    "archetype": {
      "type": "string",
      "enum": [
        "infernal_dragons",
        "abyssal_horrors",
        "nature_spirits",
        "storm_elementals",
        "shadow_assassins",
        "celestial_guardians",
        "undead_legion",
        "divine_knights",
        "arcane_mages",
        "mechanical_constructs",
        "neutral"
      ]
    },
    "effectType": {
      "type": "string",
      "enum": [
        "continuous",
        "triggered",
        "ignition",
        "quick",
        "activated",
        "counter"
      ]
    },
    "triggerCondition": {
      "type": "string",
      "enum": [
        "on_summon",
        "on_opponent_summon",
        "on_destroy",
        "on_flip",
        "on_battle_damage",
        "on_battle_destroy",
        "on_battle_attacked",
        "on_battle_start",
        "on_draw",
        "on_end",
        "on_standby",
        "on_main1_start",
        "on_turn_start",
        "on_turn_end",
        "manual",
        "continuous",
        "quick",
        "while_in_gy",
        "while_banished",
        "on_sent_to_gy",
        "on_banished",
        "on_card_to_gy",
        "on_opponent_card_to_gy",
        "on_special_summon",
        "on_tribute_summon",
        "on_attack_declaration",
        "on_opponent_attacks",
        "on_direct_attack",
        "on_effect_activation",
        "on_spell_activation",
        "on_trap_activation",
        "on_opponent_effect",
        "on_lp_damage",
        "on_lp_gain"
      ]
    },
    "effect": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "effectType": { "$ref": "#/definitions/effectType" }
      },
      "required": ["name", "description", "effectType"]
    },
    "jsonAbility": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "trigger": { "$ref": "#/definitions/triggerCondition" },
        "effects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "value": { "type": "number" },
              "target": { "type": "object" },
              "duration": { "type": "string" }
            }
          }
        },
        "isOPT": { "type": "boolean" },
        "isHOPT": { "type": "boolean" },
        "spellSpeed": { "type": "integer", "enum": [1, 2, 3] },
        "isContinuous": { "type": "boolean" },
        "cost": { "type": "object" },
        "protection": { "type": "object" }
      }
    },
    "card": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "The name of the card"
        },
        "rarity": {
          "$ref": "#/definitions/rarity",
          "description": "Card rarity level"
        },
        "cardType": {
          "$ref": "#/definitions/cardType",
          "description": "The type of card"
        },
        "archetype": {
          "$ref": "#/definitions/archetype",
          "description": "The archetype/faction this card belongs to"
        },
        "cost": {
          "type": "integer",
          "minimum": 0,
          "maximum": 12,
          "description": "The resource cost to play this card"
        },
        "attack": {
          "type": "integer",
          "minimum": 0,
          "description": "Attack stat (creatures only)"
        },
        "defense": {
          "type": "integer",
          "minimum": 0,
          "description": "Defense stat (creatures only)"
        },
        "effects": {
          "type": "array",
          "items": { "$ref": "#/definitions/effect" },
          "description": "Legacy effect descriptions (human-readable)"
        },
        "ability": {
          "$ref": "#/definitions/jsonAbility",
          "description": "Machine-readable ability definition"
        },
        "flavorText": {
          "type": "string",
          "description": "Flavor text for the card"
        },
        "imageUrl": {
          "type": "string",
          "description": "URL or path to the card image"
        }
      },
      "required": ["name", "rarity", "cardType", "archetype", "cost"],
      "if": {
        "properties": { "cardType": { "const": "creature" } }
      },
      "then": {
        "required": ["attack", "defense"]
      }
    }
  },

  "type": "array",
  "items": { "$ref": "#/definitions/card" }
}
