const DECK_MIN_SIZE = 30;
const MAX_COPIES_PER_CARD = 3;
const MAX_LEGENDARY_COPIES = 1;

const RARITY_ORDER: Record<Rarity, number> = {
  legendary: 5,
  epic: 4,
  rare: 3,
  uncommon: 2,
  common: 1,
