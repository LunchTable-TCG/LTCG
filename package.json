{
  "name": "ltcg-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n convex,web,admin -c blue,magenta,cyan \"bun run dev:convex\" \"bun run dev:web\" \"bun run dev:admin\"",
    "dev:convex": "convex dev",
    "dev:web": "cd apps/web && bun run dev",
    "dev:admin": "cd apps/admin && bun run dev",
    "dev:agent": "cd packages/plugin-ltcg && bun run start",
    "dev:docs": "concurrently -n docs-players,docs-dev -c yellow,green \"bun run dev:docs-players\" \"bun run dev:docs-dev\"",
    "dev:docs-players": "cd apps/docs-players && bun run dev",
    "dev:docs-dev": "cd apps/docs-dev && bun run dev",
    "dev:all": "concurrently -n convex,web,admin,agent -c blue,magenta,cyan,green \"bun run dev:convex\" \"bun run dev:web\" \"bun run dev:admin\" \"bun run dev:agent\"",
    "build": "turbo run build",
    "build:web": "cd apps/web && bun run build",
    "build:admin": "cd apps/admin && bun run build",
    "build:docs": "cd apps/docs-players && bun run build && cd ../docs-dev && bun run build",
    "build:docs-players": "cd apps/docs-players && bun run build",
    "build:docs-dev": "cd apps/docs-dev && bun run build",
    "start": "cd apps/web && bun run start",
    "start:admin": "cd apps/admin && bun run start",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --write .",
    "check": "biome check --write .",
    "test": "vitest",
    "test:once": "vitest run",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "test:unit": "vitest run --project web",
    "test:unit:watch": "vitest apps/web/src",
    "test:convex": "vitest run convex",
    "test:convex:watch": "vitest convex",
    "test:integration": "vitest run tests/integration",
    "test:integration:watch": "vitest tests/integration",
    "test:ci": "bun run test:unit && playwright test e2e/smoke.spec.ts",
    "test:all": "bun run test:unit && bun run test:convex && bun run test:integration && bun run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report playwright-report",
    "test:e2e:smoke": "playwright test e2e/smoke.spec.ts",
    "test:e2e:auth": "playwright test e2e/auth.spec.ts",
    "test:e2e:deck": "playwright test e2e/deck.spec.ts",
    "test:e2e:lobby": "playwright test e2e/lobby.spec.ts",
    "test:e2e:gameplay": "playwright test e2e/gameplay.spec.ts",
    "test:e2e:effects": "playwright test e2e/effects.spec.ts",
    "test:e2e:economy": "playwright test e2e/economy.spec.ts",
    "test:e2e:story": "playwright test e2e/story.spec.ts",
    "test:e2e:social": "playwright test e2e/social.spec.ts",
    "test:e2e:realtime": "playwright test e2e/realtime.spec.ts",
    "type-check": "cd packages/core && bun run build && cd ../.. && tsc --noEmit && tsc --project apps/web/tsconfig.json --noEmit && tsc --project apps/admin/tsconfig.json --noEmit && tsc --project packages/plugin-ltcg/tsconfig.json --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:root": "tsc --noEmit",
    "type-check:web": "tsc --project apps/web/tsconfig.json --noEmit",
    "type-check:admin": "tsc --project apps/admin/tsconfig.json --noEmit",
    "type-check:convex": "tsc --project convex/tsconfig.json --noEmit",
    "type-safety": "bun run scripts/type-safety-check.ts",
    "type-safety:ci": "bun run type-safety && bun run type-check",
    "convex": "convex",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist",
    "dead-code": "python3 scripts/check_dead_code.py",
    "dead-code:detailed": "python3 scripts/check_dead_code.py --detailed",
    "dead-code:json": "python3 scripts/check_dead_code.py --json",
    "validate:env": "bun run scripts/validate-env.ts",
    "setup:wizard": "bun run scripts/setup-wizard.ts",
    "setup": "bun run validate:env && bun run setup:complete && echo '\nâœ… Setup complete! Now run: bun run setup:superadmin --privyUserId YOUR_PRIVY_ID'",
    "setup:complete": "convex run setup:setupComplete --prod",
    "setup:quick": "convex run setup:setupQuick --prod",
    "setup:superadmin": "convex run setup:setupSuperadmin --prod",
    "setup:status": "convex run setup:checkSetupStatus",
    "setup:reset": "convex run setup:resetAll --prod",
    "seed:cards": "convex run scripts/seedStarterCards:seedStarterCards --prod",
    "seed:story": "convex run scripts/seedStoryChapters:seedStoryChapters --prod",
    "seed:configs": "convex run admin/config:seedDefaultConfigs --prod",
    "migrate:admins": "convex run migrations/migrateAdminRoles:migrateAdminRoles --prod",
    "migrate:treasury": "convex run treasury/wallets:migrateExistingWallets --prod"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.35",
    "@ai-sdk/gateway": "^3.0.32",
    "@ai-sdk/openai": "^3.0.25",
    "@convex-dev/action-cache": "^0.3.0",
    "@convex-dev/action-retrier": "^0.3.0",
    "@convex-dev/agent": "^0.3.2",
    "@convex-dev/aggregate": "^0.2.1",
    "@convex-dev/crons": "^0.2.0",
    "@convex-dev/migrations": "^0.3.1",
    "@convex-dev/presence": "^0.3.0",
    "@convex-dev/rag": "^0.7.0",
    "@convex-dev/ratelimiter": "^0.1.7",
    "@convex-dev/sharded-counter": "^0.2.0",
    "@convex-dev/stripe": "^0.1.3",
    "@convex-dev/workflow": "^0.3.4",
    "@convex-dev/workpool": "^0.3.1",
    "@flags-sdk/hypertune": "^0.3.2",
    "@openrouter/ai-sdk-provider": "^2.1.1",
    "@oslojs/crypto": "^1.0.1",
    "@privy-io/node": "^0.8.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/web3.js": "^1.98.4",
    "@tailwindcss/postcss": "4",
    "@types/dompurify": "^3.2.0",
    "@vercel/blob": "^2.0.1",
    "@vercel/edge-config": "^1.4.3",
    "ai": "^6.0.68",
    "bcryptjs": "^3.0.3",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.6",
    "convex-helpers": "^0.1.111",
    "dompurify": "^3.3.1",
    "flags": "^4.0.2",
    "framer-motion": "^12.29.0",
    "hypertune": "^2.10.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "next": "15.5.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "stripe": "^20.3.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "1.4.0",
    "vercel": "^50.9.5",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@edge-runtime/vm": "^5.0.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/bs58": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "convex-test": "^0.0.41",
    "critters": "^0.0.25",
    "happy-dom": "^20.4.0",
    "livekit-server-sdk": "^2.15.0",
    "postcss": "^8.4.0",
    "tailwindcss": "4",
    "turbo": "^2.7.5",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.8.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
