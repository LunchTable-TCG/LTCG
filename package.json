{
  "name": "ltcg-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n convex,web,admin -c blue,magenta,cyan \"bun run dev:convex\" \"bun run dev:web\" \"bun run dev:admin\"",
    "dev:convex": "convex dev",
    "dev:web": "cd apps/web && bun run dev",
    "dev:admin": "cd apps/admin && bun run dev",
    "dev:agent": "cd packages/plugin-ltcg && bun run start",
    "dev:all": "concurrently -n convex,web,admin,agent -c blue,magenta,cyan,green \"bun run dev:convex\" \"bun run dev:web\" \"bun run dev:admin\" \"bun run dev:agent\"",
    "build": "turbo run build",
    "build:web": "cd apps/web && bun run build",
    "build:admin": "cd apps/admin && bun run build",
    "start": "cd apps/web && bun run start",
    "start:admin": "cd apps/admin && bun run start",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --write .",
    "check": "biome check --write .",
    "test": "vitest",
    "test:once": "vitest run",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "test:unit": "vitest run --project web",
    "test:unit:watch": "vitest apps/web/src",
    "test:convex": "vitest run convex",
    "test:convex:watch": "vitest convex",
    "test:integration": "vitest run tests/integration",
    "test:integration:watch": "vitest tests/integration",
    "test:ci": "bun run test:unit && playwright test e2e/smoke.spec.ts",
    "test:all": "bun run test:unit && bun run test:convex && bun run test:integration && bun run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report playwright-report",
    "test:e2e:smoke": "playwright test e2e/smoke.spec.ts",
    "test:e2e:auth": "playwright test e2e/auth.spec.ts",
    "test:e2e:deck": "playwright test e2e/deck.spec.ts",
    "test:e2e:lobby": "playwright test e2e/lobby.spec.ts",
    "test:e2e:gameplay": "playwright test e2e/gameplay.spec.ts",
    "test:e2e:effects": "playwright test e2e/effects.spec.ts",
    "test:e2e:economy": "playwright test e2e/economy.spec.ts",
    "test:e2e:story": "playwright test e2e/story.spec.ts",
    "test:e2e:social": "playwright test e2e/social.spec.ts",
    "test:e2e:realtime": "playwright test e2e/realtime.spec.ts",
    "type-check": "tsc --noEmit && tsc --project apps/web/tsconfig.json --noEmit && tsc --project apps/admin/tsconfig.json --noEmit && tsc --project convex/tsconfig.json --noEmit && tsc --project packages/plugin-ltcg/tsconfig.json --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:root": "tsc --noEmit",
    "type-check:web": "tsc --project apps/web/tsconfig.json --noEmit",
    "type-check:admin": "tsc --project apps/admin/tsconfig.json --noEmit",
    "type-check:convex": "tsc --project convex/tsconfig.json --noEmit",
    "type-safety": "bun run scripts/type-safety-check.ts",
    "type-safety:ci": "bun run type-safety && bun run type-check",
    "convex": "convex",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.35",
    "@ai-sdk/gateway": "^3.0.32",
    "@ai-sdk/openai": "^3.0.25",
    "@convex-dev/agent": "^0.3.2",
    "@convex-dev/aggregate": "^0.2.1",
    "@convex-dev/rag": "^0.7.0",
    "@convex-dev/ratelimiter": "^0.1.7",
    "@convex-dev/sharded-counter": "^0.2.0",
    "@convex-dev/workpool": "^0.3.1",
    "@flags-sdk/hypertune": "^0.3.2",
    "@openrouter/ai-sdk-provider": "^2.1.1",
    "@oslojs/crypto": "^1.0.1",
    "@privy-io/node": "^0.8.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/web3.js": "^1.98.4",
    "@tailwindcss/postcss": "4",
    "@types/dompurify": "^3.2.0",
    "@vercel/blob": "^2.0.1",
    "@vercel/edge-config": "^1.4.3",
    "ai": "^6.0.68",
    "bcryptjs": "^3.0.3",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.6",
    "convex-helpers": "^0.1.111",
    "dompurify": "^3.3.1",
    "flags": "^4.0.2",
    "framer-motion": "^12.29.0",
    "hypertune": "^2.10.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "next": "15.5.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "1.4.0",
    "vercel": "^50.9.5",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@edge-runtime/vm": "^5.0.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/bs58": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "convex-test": "^0.0.41",
    "critters": "^0.0.25",
    "happy-dom": "^20.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "4",
    "turbo": "^2.7.5",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.8.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
