{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    ".env",
    ".env.local",
    ".env.*.local",
    "tsconfig.json",
    "biome.json",
    "package.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_*",
    "CONVEX_*",
    "PRIVY_*",
    "VERCEL_*"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "app/**",
        "public/**",
        "package.json",
        "tsconfig.json",
        "next.config.ts",
        "tailwind.config.*",
        "postcss.config.*",
        "!**/*.test.ts",
        "!**/*.test.tsx",
        "!**/*.spec.ts",
        "!**/*.spec.tsx"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        ".convex/**"
      ],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "CONVEX_DEPLOYMENT",
        "CONVEX_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**",
        "app/**",
        "convex/**",
        "package.json",
        "tsconfig.json",
        "biome.json",
        "!**/*.test.ts",
        "!**/*.test.tsx"
      ],
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "format": {
      "cache": false,
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "app/**/*.ts",
        "app/**/*.tsx",
        "convex/**/*.ts",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": ["**/*.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "app/**",
        "tests/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "vitest.config.ts",
        "playwright.config.ts"
      ],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "vitest.config.ts"
      ],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "inputs": [
        "e2e/**",
        "playwright.config.ts"
      ],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
